---
import { Picture } from "@astrojs/image/components";
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import Dropdown from "./dropdown.astro";
import navLogo from "assets/logo.svg";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

const menuitems = [
  {
    title: "Portfolio",
    path: "/",
  },
  {
    title: "Shoptet",
    path: "/shoptet",
  },
  {
    title: "Wordpress",
    path: "/wordpress",
  },
  {
    title: "Blog",
    path: "/blog",
  },
];
---


<header class="flex flex-col lg:flex-row justify-between items-center py-5 absolute w-full z-10">
  <Container>
    <div class="flex flex-col lg:flex-row justify-between items-center">
      <Astronav>
        <div class="flex w-full lg:w-auto items-center justify-between">
          <a href="/" class="w-9">
            <img src={navLogo} alt="Jan Heder">
          </a>
          <div class="block lg:hidden">
            <MenuIcon class="w-7 h-7 text-white" />
          </div>
        </div>
        <MenuItems class="hidden w-full lg:w-auto lg:flex lg:mt-0">
          <ul class="flex flex-col bg-black mt-3 text-lg md:mt-0 md:bg-transparent lg:flex-row lg:gap-3">
            {
              menuitems.map((item, index) => (
                <>
                  <li>
                    <a
                      href={item.path}
                      class="flex p-3 text-white text-base border-1 border-white opacity-80 lg:px-3 hover:text-white hover:opacity-100">
                      {item.title}
                    </a>
                  </li>
                </>
              ))
            }
            <li><a href="/kontakt" class="flex p-3 text-white text-base border-1 border-white opacity-80 lg:px-3 hover:text-white hover:opacity-100">Kontakt</a></li>
          </ul>
        </MenuItems>
      </Astronav>
    </div>
  </Container>
</header>
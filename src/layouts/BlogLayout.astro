---
import Container from "@components/container.astro";
import { getFormattedDate } from "@utils/all";
import { log } from "astro/dist/core/logger/core";
import Layout from "./Layout.astro";

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <div class="pt-20 bg-black"></div>

  <Container>
    
    <div class="mx-auto max-w-[735px] mt-14">
      <h1
        class="text-3xl lg:text-4xl font-bold lg:tracking-tight mt-1 lg:leading-tight">
        {frontmatter.title}
      </h1>
      <div class="flex gap-2 mt-3 items-center flex-wrap md:flex-nowrap">


      </div>
    </div>

    <div class="mx-auto max-w-[735px] mt-14 prose text-lg">
      <slot />
    </div>
    <div class="text-center mt-20 flex justify-center">
      <a
        href="/blog"
        class="bg-gray-100 px-5 py-3 rounded-md hover:bg-gray-200 transition"
        >← Zpět na výpis článků</a
      >
    </div> 
  </Container>
</Layout>

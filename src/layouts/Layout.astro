// console.log(src);

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "/opengraph.jpg",
  Astro.site
).toString();

const { title } = Astro.props;

const makeTitle = title
  ? title + " | " + "Jan Heder"
  : "Jan Heder - Navrhuji a tvořím skvělé e-shopy, které váš byznys posunou o level výše";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- <link rel="preload" as="image" href={src} alt="Hero" /> -->
    <SEO
      title={makeTitle}
      description="Navrhuji a tvořím skvělé e-shopy, které váš byznys posunou o level výše."
      canonical={canonicalURL}
      twitter={{
        creator: "@janheder",
        site: "@janheder",
        card: "summary_large_image",
      }}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `Jan Heder - Navrhuji a tvořím skvělé e-shopy`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "Jan Heder - Navrhuji a tvořím skvělé e-shopy",
        },
      }}
    />

